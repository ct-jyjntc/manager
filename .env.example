# 进程保活管理器环境变量配置文件示例
# 复制此文件为 .env 并根据需要修改配置

# 应用基本配置
NODE_ENV=production
PORT=3000

# 多服务器功能配置
# SSH连接超时时间 (毫秒)
SSH_TIMEOUT=10000

# 最大SSH连接数
MAX_SSH_CONNECTIONS=10

# 心跳检测间隔 (毫秒)
HEARTBEAT_INTERVAL=30000

# SSH连接重试次数
SSH_RETRY_COUNT=3

# SSH连接重试间隔 (毫秒)
SSH_RETRY_INTERVAL=5000

# 数据文件路径配置
SERVERS_DATA_FILE=./servers.json
PROCESSES_DATA_FILE=./processes.json
MULTI_SERVER_PROCESSES_DATA_FILE=./multi-server-processes.json

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/manager

# 安全配置
# 是否启用HTTPS (生产环境建议启用)
ENABLE_HTTPS=false

# SSL证书路径 (如果启用HTTPS)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# 会话密钥 (用于用户认证，如果实现)
SESSION_SECRET=your-secret-key-here

# 数据库配置 (如果使用数据库存储)
# DATABASE_URL=sqlite:./data/manager.db

# 备份配置
# 是否启用自动备份
ENABLE_AUTO_BACKUP=true

# 备份间隔 (小时)
BACKUP_INTERVAL=24

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# 备份存储路径
BACKUP_PATH=./backups

# 监控配置
# 是否启用性能监控
ENABLE_MONITORING=true

# 监控数据保留天数
MONITORING_RETENTION_DAYS=30

# 通知配置 (如果实现)
# 邮件通知配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=process-manager@example.com

# 钉钉/企业微信通知 (如果实现)
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your-token
WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-key

# 开发配置
# 是否启用调试模式
DEBUG=false

# 是否启用热重载 (开发环境)
HOT_RELOAD=false

# API限流配置
# 每分钟最大请求数
RATE_LIMIT_PER_MINUTE=100

# 缓存配置
# 是否启用缓存
ENABLE_CACHE=true

# 缓存过期时间 (秒)
CACHE_TTL=300
